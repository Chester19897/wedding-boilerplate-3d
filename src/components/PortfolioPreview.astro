---
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'story'>
  id?: number
}

const { project, id } = Astro.props
const { data } = project
---

<div class=`card ${id === 0 && 'active'}` ">
  <div class="story-item">
    <div class="story-img">
      <img
        src={data.img}
        alt={data.img_alt || ''}
        loading="lazy"
        decoding="async"
      />
    </div>
    <div class="story-content">
      <div class="story-content--inner">
        <h2 class="title">{data.title}</h2>
        <p>{data.description}</p>
      </div>
    </div>
  </div>
</div>

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Italianno', sans-serif !important;
    font-size: 60px !important;
    font-weight: 400;
    color: #837a7a !important;
  }
  .card.active {
    display: block;
  }
  .card {
    display: none;
  }
  .story-item {
    display: flex;
    align-items: center;
    box-shadow: 0 0 6.1px 3.9px rgba(28, 31, 86, 0.06);
  }
  .story-img {
    flex-basis: 50%;
    overflow: hidden;
    position: relative;
  }

  .story-img::before {
    position: absolute;
    left: 3%;
    top: 4%;
    width: 94%;
    height: 92%;
    content: '';
    border: 1px solid #fff;
    z-index: 11;
  }

  .story-content {
    flex-basis: 50%;
    padding: 45px 50px;
  }

  .story-content--inner {
    padding: 50px 60px 20px 0;
    border-top: 1px solid #d1c3c5;
    border-right: 1px solid #d1c3c5;
    position: relative;
  }

  .story-content--inner span {
    color: #a3888c;
    font-size: 18px;
    display: block;
    margin-bottom: 20px;
  }

  .story-content--inner p {
    color: #7b7b7b;
  }

  .title {
    font-size: 35px;
    margin-top: 30px;
    margin-bottom: 10px;
    font-weight: 400;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 991px) {
    .story-item {
      display: block;
    }
    .story-content {
      padding-top: 60px;
    }
  }

  @media (max-width: 500px) {
    .story-content {
      padding-left: 20px;
    }
    .story-content-inner {
      padding: 30px 12px 0 0;
    }

    .story-content--inner h2 {
      font-size: 24px;
    }
  }

  @media (min-width: 50em) {
    .story-content {
      padding: 40px;
    }

    .story-content--inner {
      padding: 20px 60px 0 0;
    }
  }
</style>
