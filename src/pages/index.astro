---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro'

// Component Imports
import CallToAction from '../components/CallToAction.astro'
import TabContent from '../components/TabContent.astro'
import Hero from '../components/Hero.astro'
import Icon from '../components/Icon.astro'
import PortfolioPreview from '../components/PortfolioPreview.astro'

// Page section components
import Skills from '../components/Skills.astro'
import CountdownTimer from '../components/timer/CountdownTimer'
import Form from '../components/form/Form'
import Tabs from '../components/Tabs.astro'
import Gallery from '../components/Gallery.astro'
import SlideWishes from '../components/wishes/SlideWishes'

// Content Fetching: List four most recent work projects
const stories = (await getCollection('story'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4)

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/

const FUTURE_DAY = new Date('1/1/2024 12:00:00').getTime()

const dateTimeAfterThreeDays = FUTURE_DAY
---

<BaseLayout>
