</BaseLayout>

<script>
  const navLink = document.querySelectorAll('.service-thumb.nav-link')
  const tabs = document.querySelectorAll('.tab-pane .card')

  navLink.forEach((linkTab, i) => {
    linkTab.addEventListener('click', () => {
      navLink.forEach((link) => {
        link.classList.remove('active')
      })
      tabs.forEach((tab) => {
        tab.classList.remove('active')
      })
      tabs[i].classList.add('active')
      linkTab.classList.add('active')
    })
  })
</script>

